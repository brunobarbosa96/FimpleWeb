@{
    Layout = null;
}
<link href="~/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />
<div class="modal fade" id="modalAddEvento" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Adicionar Evento</h4>
            </div>
            <div class="modal-body">
                <form id="modalAdd">
                    <div class="form-group">
                        <label for="TituloAdd" class="form-control-label">Titulo</label>
                        <input type="text" class="form-control" id="TituloAdd">
                    </div>
                    <div class="form-group">
                        <label for="LocalAdd" class="form-control-label">Onde</label>
                        <input type="text" class="form-control" id="LocalAdd">
                    </div>
                    <div class="form-group">
                        <label for="QuandoAdd" class="form-control-label date-picker">Quando</label>
                        <input type="text" class="form-control" id="QuandoAdd">
                    </div>
                    <div class="form-group">
                        <label for="DescricaoAdd" class="form-control-label">Descrição</label>
                        <textarea class="form-control" id="DescricaoAdd"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal"><span class="md-click-circle md-click-animate" style="height: 65px; width: 65px; top: -17.5px; left: 14.5156px;"></span>Cancelar</button>
                <button type="button" class="btn blue" onclick="addEvento()"><span class="md-click-circle md-click-animate" style="height: 116px; width: 116px; top: -27px; left: 16.7813px;"></span>Adiconar Evento</button>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
<script>
    $("#DescricaoAdd").summernote({
        toolbar: false
    });

    $("#QuandoAdd").datepicker({
        format: 'dd/mm/yyyy',
        language: 'pt-BR',
        autoclose: true
    });
</script>