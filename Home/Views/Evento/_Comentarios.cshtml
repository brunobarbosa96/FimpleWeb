@model Home.Models.Entity.Evento
@{ Layout = null;}

<!-- COMENTARIOS -->
<div class="row" data-id-evento="@Model.Id">
    <div class="col-md-12 blog-page">
        <h3>Comentarios</h3>
        @if (Model.Comentarios != null && Model.Comentarios.Any())
        {
            foreach (var comentario in Model.Comentarios)
            {
                <div class="row">
                    <div class="col-md-9 article-block">
                        <div class="media">
                            <a href="javascript:;" class="pull-left">
                                <img alt="" src="~/assets/img/placeholder.jpg" class="media-object">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading font-grey-cascade">
                                    <a href="@($"Perfil/{comentario.Usuario.Id}")">@comentario.Usuario.NomeCompleto</a>
                                    <i>Há algum tempo</i>
                                    <a href="javascript:;" class="btn btn-xs black">
                                        <span class="md-click-circle md-click-animate" style="height: 65px; width: 65px; top: -22.5px; left: 2.07813px;"></span>
                                        <i class="fa fa-comments-o"></i>
                                    </a>
                                </h4>
                                <div>
                                    @comentario.Conteudo
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
            }
        }
        <div class="row" data-row-coment style="display: none">
            <div class="col-md-9 article-block">
                <div class="media">
                    <a href="javascript:;" class="pull-left">
                        <img alt="" src="~/assets/img/placeholder.jpg" class="media-object">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading font-grey-cascade">
                            <a href="javascript:;">@ViewBag.UsuarioLogado.Nome</a>
                            <i></i>
                        </h4>
                        <div data-div-coment></div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="btn-group" data-add-coment>
                <button class="btn btn-circle green-haze btn-sm" type="button" data-toggle="dropdown" data-close-others="true" onclick="addComentario(this)">
                    Comentar <i class="fa fa-comment-o"></i>
                </button>
            </div>
            <div class="btn-group" style="display: none" data-salvar-coment>
                <button class="btn btn-circle green-haze btn-sm" type="button" data-toggle="dropdown" data-close-others="true" onclick="salvarComentario(this)">
                    Salvar <i class="fa fa fa-floppy-o"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- FIM COMENTARIOS -->

<script>
    
    $("[data-div-coment]")
       .summernote({
           toolbar: false,
           height: 50,
           minHeight: 50,
           maxHeight: 100
       });

</script>